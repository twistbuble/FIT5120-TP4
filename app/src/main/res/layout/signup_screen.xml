<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vector_background_create_acc"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/burger_icon">
        </ImageView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="@string/string_create_account"
        android:textColor="@color/cream"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_cream_rectangle_extra_large"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:padding="40dp">

        <EditText
            android:id="@+id/et_create_acc_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/string_create_acc_name"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_create_acc_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/string_create_acc_email"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_create_acc_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/string_create_acc_password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_create_acc_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/string_create_acc_confirm_pass"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_confirm_create_acc"
            android:layout_width="220dp"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/dark_green_rectangle_smooth"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/string_confirm"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>