<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:background="@drawable/ic_home_screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="70dp"
            android:elevation="5dp"
            android:background="@drawable/rounded_rectangle_cream_small"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_baby_blue_large"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="@string/string_recipes_excluding"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_square_blue_medium"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_recipes_without_item_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dairy_icon"
                        android:elevation="5dp" />

                    <TextView
                        android:id="@+id/tv_recipes_without_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dairy"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/recipes"
                android:textColor="@color/olive_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="220dp"/>

            <RelativeLayout
                android:id="@+id/rl_recipe_search"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:background="@drawable/rounded_square_white_small"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/search_icon" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/top_recommended_recipes"
            android:textColor="@color/olive_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/ll_recommended_recipe_one"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:background="@drawable/left_rounded_rectangle_pumpkin_orange_large">

                <RelativeLayout
                    android:id="@+id/rl_recommended_recipe_one_image"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sample_recipe_image_round">

                    <RelativeLayout
                        android:id="@+id/rl_recommended_recipe_one_heart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/white_heart_icon" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_recommended_recipe_one_text"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="@string/sample_recipe_title"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:layout_marginTop="-135dp"
                android:background="@drawable/rounded_square_white_small"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/thumbsup_icon" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rounded_square_white_small"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_recommended_recipe_two"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:background="@drawable/left_rounded_rectangle_pumpkin_orange_large">

                <RelativeLayout
                    android:id="@+id/rl_recommended_recipe_two_image"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sample_recipe_image_round">

                    <RelativeLayout
                        android:id="@+id/rl_recommended_recipe_two_heart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/red_heart_icon" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_recommended_recipe_two_text"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="@string/sample_recipe_title"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:layout_marginTop="-135dp"
                android:background="@drawable/rounded_square_white_small"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/thumbsup_icon" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rounded_square_white_small"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_icon" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/other_recipes"
            android:textColor="@color/olive_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_other_recipe_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/top_rounded_rectangle_pumpkin_orange_large"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <RelativeLayout
                            android:id="@+id/rl_other_recipe_one_image"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:background="@drawable/sample_recipe_image_round"
                            android:gravity="bottom">

                            <RelativeLayout
                                android:id="@+id/rl_other_recipe_one_heart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="80dp"
                                android:background="@drawable/rounded_square_white_small"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/red_heart_icon" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_other_recipe_one_text"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:text="@string/sample_recipe_title"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/arrow_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_other_recipe_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/top_rounded_rectangle_pumpkin_orange_large"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <RelativeLayout
                            android:id="@+id/rl_other_recipe_two_image"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:background="@drawable/sample_recipe_image_round"
                            android:gravity="bottom">

                            <RelativeLayout
                                android:id="@+id/rl_other_recipe_two_heart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="80dp"
                                android:background="@drawable/rounded_square_white_small"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/red_heart_icon" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_other_recipe_two_text"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:text="@string/sample_recipe_title"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/arrow_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_other_recipe_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/top_rounded_rectangle_pumpkin_orange_large"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <RelativeLayout
                            android:id="@+id/rl_other_recipe_three_image"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:background="@drawable/sample_recipe_image_round"
                            android:gravity="bottom">

                            <RelativeLayout
                                android:id="@+id/rl_other_recipe_three_heart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="80dp"
                                android:background="@drawable/rounded_square_white_small"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/red_heart_icon" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_other_recipe_three_text"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:text="@string/sample_recipe_title"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/arrow_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_other_recipe_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/top_rounded_rectangle_pumpkin_orange_large"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <RelativeLayout
                            android:id="@+id/rl_other_recipe_four_image"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:background="@drawable/sample_recipe_image_round"
                            android:gravity="bottom">

                            <RelativeLayout
                                android:id="@+id/rl_other_recipe_four_heart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="80dp"
                                android:background="@drawable/rounded_square_white_small"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/red_heart_icon" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_other_recipe_four_text"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:text="@string/sample_recipe_title"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/rounded_square_white_small"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/arrow_icon" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>